}

.custom{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  height: 100rpx;
  background: #fff;
  z-index: 999;
  display: flex;
}
.custom .to_total{
  margin-top: 20rpx;
}
.custom .title{
  display: flex;
  align-items: center;
  margin: 0 30rpx;
}
