.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: medium;
  flex: 1;
} 
.icon{
  width: 35rpx;
  height: 30rpx;
}
.divLine{
 background: whitesmoke;
 width: 100%;
 height: 15rpx;
}

.text{
  margin-left:10rpx;
